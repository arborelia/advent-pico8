#include input1.lua
#include advent.p8

function increased_windows(arr, w)
 increases = 0
 
 for pos=(w+1),#arr do
  val = arr[pos]
  if (type(val) != "number") break
  prev = arr[pos-w]
  if val > prev then
   increases += 1
  end
	end
	return increases
end

arr = split(input, "\n", true)
?increased_windows(arr, 1)
check(increased_windows(arr, 3))


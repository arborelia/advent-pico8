#include advent.p8

-- parse rules of the form
-- "xy -> z" and the template
function parse_input(lines)
 local rules={}
 local start=nil
 for l in all(lines) do
  if #l == 7 then
   rules[sub(l,1,2)] = at(l,7)
  elseif #l > 0 then
   assert(start==nil)
   start=l
  end
 end
 return {rules=rules, start=start}
end

function max_diff(counts)
 local values={}
 for l,n in pairs(counts) do
  add(values, n)
 end
 digits_sort(values)
 return bigsub(values[#values], values[1])
end

-- add a decimal value to the
-- entry of pcounts with key
function addto(pcounts, key, val)
 if pcounts[key] == nil then
  pcounts[key] = val
 else
  pcounts[key] = bigadd(pcounts[key], val)
 end
end

function show_table(lcounts)
 for p,c in pairs(lcounts) do
  print(p..": "..dectext(c))
 end
end

function simulate(input, steps)
 local polymer=input.start
 -- counts of adjacent pairs
 -- of letters
 local pcounts={}
 local rules=input.rules
 
 -- count the starting pairs
 for i=1,#polymer-1 do
  addto(
   pcounts,
   sub(polymer,i,i+1),
   {1}
  )
 end
 
 for step=1,steps do
  -- the counts at the next step
  local nextp = {}
  for p,c in pairs(pcounts) do
   if rules[p] != nil then
    -- update the new pairs we
    -- get from inserting a new
    -- letter in this pair
    local insert = rules[p]
    local p1 = at(p,1)..insert
    local p2 = insert..at(p,2)
    addto(nextp, p1, c)
    addto(nextp, p2, c)
   else
    -- copy the unmodified count
    addto(nextp, p, c)
   end
  end
  pcounts = nextp
 end
 
 -- convert counts of letter
 -- pairs into counts of letters
 local lcounts={}
 
 for p,c in pairs(pcounts) do
  addto(lcounts, at(p,1), c)
 end
 addto(lcounts, at(polymer,#polymer), {1})
 return dectext(max_diff(lcounts))
end

test(dectext(max_diff({{5},{1},{2}})), "4", "max_diff")
test(bigadd({1}, {9,9,9}), {0,0,0,1}, "999 + 1 = 1000")
test(bigadd({9,9},{9,9}), {8,9,1}, "99 + 99 = 198")
test(bigsub({0,1}, {3}), {7,0}, "10 - 3 = 7")
test(digits_less({9}, {1,1,1}), true, "9 < 111")
test(digits_less({1,2,3},{1,2,4}), true, "123 < 124")
test(digits_less({1}, {}), false, "1 > 0")
test(dectext({1,2,3}), "321")
input = parse_input(split(
 [[nncb

ch -> b
hh -> n
cb -> h
nh -> c
hb -> c
hc -> b
hn -> c
nn -> c
bh -> h
nc -> b
nb -> b
bn -> b
bb -> n
bc -> b
cc -> n
cn -> c]], "\n"))
test(input.start, "nncb")
test(simulate(input, 0), "1", "0 steps")
test(simulate(input, 1), "1", "1 step")
test(simulate(input, 2), "5", "2 steps")
test(simulate(input, 10), "1588", "10 steps")
check(
 simulate(
  parse_input(read_lines()),
  40
 )
)

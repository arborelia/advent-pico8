function minify(num)
 return shr(num,16)
end

function bigify(num)
 return shl(num,16)
end

function inttext(val)
 return tostr(val, 2)
end

function bigmul(a, b)
 -- returns a string of a * b
 -- a and b are fixed point nums
 prod = minify(a) * b
 return inttext(prod)
end

function mul32(a, b)
 -- multiplies a * b
 -- where both of them are 32bit ints
 -- so one of them needs to be shifted
 return a * bigify(b,16)
end

